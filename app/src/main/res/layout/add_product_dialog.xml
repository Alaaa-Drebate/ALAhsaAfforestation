<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxHeight="300dp"
    android:background="@color/secondary">

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/quantity_edit_text"
        android:layout_alignBottom="@id/quantity_edit_text"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:text="@string/enter_quantity"/>

    <EditText
        android:id="@+id/quantity_edit_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/cart_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/cart_number_edit_text"
        android:layout_alignBottom="@id/cart_number_edit_text"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:text="@string/enter_cart_number"
        />

    <EditText
        android:id="@+id/cart_number_edit_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/quantity_edit_text"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/ok_in_dialog2"
        android:text="@string/ok"/>
    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/ok"
        android:layout_alignParentBottom="true"
        android:paddingBottom="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/cancel_in_dialog2"
        android:text="@string/cancel"/>


</RelativeLayout>